{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2019", "esnext.intl", "es2017.intl", "es2018.intl"],
    "removeComments": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": ["*", "src/**/*"],
  "exclude": ["node_modules"]
}
